@page
@model AddressReduction.Pages.Addresses.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Address</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Address.LongAddress" class="control-label"></label>
                <input asp-for="Address.LongAddress"  class="form-control" />
                <span asp-validation-for="Address.LongAddress" class="text-danger"></span>
            </div>
            @if (Model.ShowMessage)
            {
                <div class="alert alert-info alert-dismissible" role="alert">
                    @Model.Message
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
